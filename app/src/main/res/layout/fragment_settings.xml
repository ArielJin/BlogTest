<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RootFragment">

    <Button
        android:id="@+id/btn_to_root"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="去 Root 页面"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_to_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="去 Action 页面"
        android:textAllCaps="false" />

    <CheckBox
        android:id="@+id/cb_to_activity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="true: 去 Activity；false: 去 Fragment"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Settings Fragment"
        android:textSize="24sp" />


</LinearLayout>