<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_nav"
    app:startDestination="@id/motionRootFragment">

    <fragment
        android:id="@+id/motionRootFragment"
        android:name="me.monster.blogtest.motion.MotionRootFragment"
        android:label="MotionRootFragment">
        <action
            android:id="@+id/action_motionRootFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_motionRootFragment_to_swipeFragment"
            app:destination="@id/swipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="me.monster.blogtest.motion.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/swipeFragment"
        android:name="me.monster.blogtest.motion.SwipeFragment"
        android:label="SwipeFragment" />
</navigation>